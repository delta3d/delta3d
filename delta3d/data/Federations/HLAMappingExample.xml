<?xml version="1.0" encoding="UTF-8"?>

<hla xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="hlaComponent"
     xsi:schemaLocation="hlaComponent HLAMapping.xsd">
        
    <header>
        <name>Test</name>
        <description>test mapping</description>
        <disEntityTypes>true</disEntityTypes> 
        <disEntityTypeAttribute>EntityType</disEntityTypeAttribute>
        <author>David Guthrie</author>
        <comment>This is for the unit tests</comment>
        <copyright>2006 Alion</copyright>
        <schemaVersion>1.0</schemaVersion>
    </header>
    
    <libraries>
      <actorLibrary>
        <name>testGameActorLibrary</name>
        <version>1.0</version>
      </actorLibrary>
    </libraries>
    
    <objects>
        <object name="BaseEntity">
            <abstract/>
            <entityIdAttributeName>EntityIdentifier</entityIdAttributeName>
            <attrToProp>
                <hlaName>EntityType</hlaName>
                <hlaDataType>Entity</hlaDataType>
                <hlaRequired>true</hlaRequired>
                <gameName>Entity Type</gameName>
                <gameDataType>ENUMERATION</gameDataType>
                <gameRequired>false</gameRequired>
                <default></default>
            </attrToProp>            
            <attrToProp>
                <hlaName>EntityIdentifier</hlaName>
                <hlaDataType>Entity Identifier</hlaDataType>
                <hlaRequired>true</hlaRequired>
                <gameName>sendingActorId</gameName>
                <gameDataType>ACTOR</gameDataType>
                <gameRequired>true</gameRequired>
                <default></default>
            </attrToProp>            
            <attrToProp>
                <hlaName>DamageState</hlaName>
                <hlaDataType>Unsigned Int</hlaDataType>
                <hlaRequired>false</hlaRequired>
                <gameName>Damage State</gameName>
                <gameDataType>ENUMERATION</gameDataType>
                <gameRequired>false</gameRequired>
                <default>Destroyed</default>
                <enumerationMapping>
                    <value id="0">No Damage</value>
                    <value id="1">Damaged</value>
                    <value id="2">Damaged</value>
                    <value id="3">Destroyed</value>
                </enumerationMapping>
            </attrToProp>            
            <attrToProp>
                <hlaName>Orientation</hlaName>
                <hlaDataType>Euler Angle</hlaDataType>
                <hlaRequired>true</hlaRequired>
                <gameName>Rotation</gameName>
                <gameDataType>VEC3</gameDataType>
                <gameRequired>true</gameRequired>
                <default></default>
                <!-- this should be ignored -->
                <enumerationMapping>
                	<value id="0">No Damage</value>
                	<value id="1">Slight Damage</value>
                	<value id="2">Moderate Damage</value>
                	<value id="3">Destroyed</value>
                </enumerationMapping>
            </attrToProp>            
            <attrToProp>
                <hlaName>WorldLocation</hlaName>
                <hlaDataType>World Coordinate</hlaDataType>
                <hlaRequired>true</hlaRequired>
                <gameName>Translation</gameName>
                <gameDataType>VEC3</gameDataType>
                <gameRequired>true</gameRequired>
                <default></default>
            </attrToProp>            
        </object>
        <object extends="BaseEntity">
            <objectClass>BaseEntity.PhysicalEntity.Platform.GroundVehicle</objectClass>
            <actorType>TestHLA.Tank</actorType>
            <disEntityEnum>
                <kind>1</kind>
                <domain>1</domain>
                <country>222</country>
                <category>2</category>
                <subcategory>4</subcategory>
                <specific>6</specific>
                <extra>0</extra>
            </disEntityEnum>
        </object>

        <object extends="BaseEntity" name="F18">
            <objectClass>BaseEntity.PhysicalEntity.Platform.Aircraft</objectClass>
            <actorType>TestHLA.Jet</actorType>
            <disEntityEnum>
                <kind>1</kind>
                <domain>2</domain>
                <country>225</country>
                <category>1</category>
                <subcategory>9</subcategory>
                <specific>4</specific>
                <extra>0</extra>
            </disEntityEnum>
            <attrToProp>
                <hlaName>VelocityVector</hlaName>
                <hlaDataType>Velocity Vector</hlaDataType>
                <gameName>Velocity Vector</gameName>
                <gameDataType>VEC3D</gameDataType>
                <default></default>
            </attrToProp>            
        </object>

        <object extends="BaseEntity">
            <objectClass>BaseEntity.PhysicalEntity.Platform.Aircraft</objectClass>
            <actorType>TestHLA.Helicopter</actorType>
            <remoteOnly>true</remoteOnly>
            <disEntityEnum>
                <kind>1</kind>
                <domain>2</domain>
                <country>222</country>
                <category>20</category>
                <subcategory>2</subcategory>
                <specific>6</specific>
                <extra>0</extra>
            </disEntityEnum>
            <entityIdAttributeName>HeloIdentifier</entityIdAttributeName>
            <attrToProp>
                <hlaName>VelocityVector</hlaName>
                <hlaDataType>Velocity Vector</hlaDataType>
                <gameName>Velocity Vector</gameName>
                <gameDataType>VEC3D</gameDataType>
                <default></default>
            </attrToProp>            
        </object>

        <object>
            <objectClass>BaseEntity.PhysicalEntity.Platform.Aircraft</objectClass>
            <actorType>TestHLA.Jet</actorType>
            <remoteOnly>true</remoteOnly>
            <disEntityEnum>
                <kind>1</kind>
                <domain>2</domain>
                <country>225</country>
                <category>0</category>
                <subcategory>0</subcategory>
                <specific>0</specific>
                <extra>0</extra>
            </disEntityEnum>
            <attrToProp>
                <hlaName>VelocityVector</hlaName>
                <hlaDataType>Velocity Vector</hlaDataType>
                <gameName>Velocity Vector</gameName>
                <gameDataType>VEC3D</gameDataType>
                <default></default>
            </attrToProp>            
        </object>

        <object>
            <objectClass>TryingToMapTheJetBidirectionallyAgain</objectClass>
            <actorType>TestHLA.Jet</actorType>
            <remoteOnly>false</remoteOnly>
            <disEntityEnum>
                <kind>1</kind>
                <domain>2</domain>
                <country>225</country>
                <category>0</category>
                <subcategory>0</subcategory>
                <specific>0</specific>
                <extra>0</extra>
            </disEntityEnum>
        </object>
    </objects>
    
    <interactions>

    	<interaction name="DetonationLoc" >
    	    <abstract/>
    	    <paramToParam>
    	        <hlaName>DetonationLocation</hlaName>
    	        <hlaDataType>World Coordinate</hlaDataType>
    	        <hlaRequired>true</hlaRequired>
    	        <gameName>Location</gameName>
    	        <gameDataType>VEC3</gameDataType>
    	        <gameRequired>true</gameRequired>
    	    </paramToParam>
    	</interaction>

    	<interaction extends="DetonationLoc">
    	    <interactionClass>MunitionDetonation</interactionClass>
    	    <messageType>Restarted</messageType>
    	</interaction>

        <interaction>
           <interactionClass>WeaponFire</interactionClass>
           <messageType>Resumed</messageType>
           <paramToParam>
              <hlaName>FiringObjectIdentifier</hlaName>
              <hlaDataType>Entity Identifier</hlaDataType>
              <hlaRequired>true</hlaRequired>
              <gameName>aboutActorId</gameName>
              <gameDataType>ACTOR</gameDataType>
              <gameRequired>true</gameRequired>
           </paramToParam>
        </interaction>
    </interactions>


</hla>
