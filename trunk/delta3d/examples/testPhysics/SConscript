Import('*')

testSrcs = ['testphysics.cpp']

testDeps = [ 'glgui', 'isense', 'ode', 'OpenThreads', 'osg', 'osgDB', 'osgGL2', 'osgParticle', 'osgTerrain', 'osgText', 'osgUtil', 'sg', 'ul', 'js', 'Producer', 'tinyxml', 'gdal', 'python' ]

if OS == 'windows' :
   testDeps += ['User32']
elif OS == 'linux' :
   testDeps += ['Xxf86vm']

testDeps = [ extLibs[lib] for lib in testDeps if extLibs.has_key(lib) ] + [ 'dtcore', 'dtabc', 'dtutil' ]

env.Program( 'testPhysics', testSrcs, LIBS = testDeps )