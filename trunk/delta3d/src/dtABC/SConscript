Import('*')

dtAbcSrcs = [ 	'application.cpp', 
		'baseabc.cpp', 
		'weather.cpp', 
		'widget.cpp' ]

env = env.Copy()

dtAbcLib = env.SharedLibrary( 'dtabc', dtAbcSrcs, LIBS=[ 'dtcore', 'osgDB', 'plibsg', 'plibul', 'Producer', 'tinyxml' ] )

# change to INSTALL_DIR

env.Install( '../../lib', dtAbcLib )
