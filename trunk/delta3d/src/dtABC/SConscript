Import('*')

dtAbcSrcs = [   'application.cpp',
                'baseabc.cpp',
                'weather.cpp',
                'widget.cpp' ]

dtAbcDeps = [ 'OpenThreads', 'osg', 'osgDB', 'Producer', 'sg', 'tinyxml', 'ul' ]

if OS == 'windows' :
    dtAbcDeps += [ 'User32' ]
    
dtAbcDeps = [ extLibs[lib] for lib in dtAbcDeps if extLibs.has_key(lib) ] + [ 'dtcore' ]

build_delta3d_lib( 'dtabc', dtAbcSrcs, dtAbcDeps )