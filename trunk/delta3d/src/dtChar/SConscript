Import('*')

srcs = env.SGlob( '*.cpp' )

deps = [ 'dtCore', 'cal3d', 'rbody', 'dtUtil', 'isense',
         'OpenThreads', 'osg', 'osgDB', 'osgParticle',
         'osgText', 'osgUtil', 'osgSim', 'osgFX',
         'ul', 'js', 'Producer', 'opengl', 'rbody', 'rvrutils', 'rcfgscript' ] 

defines = []
if env['OS'] == 'windows':
   defines = ['DT_CHAR_LIBRARY']

    
env.BuildLib( 'dtChar', srcs, deps, defines )
