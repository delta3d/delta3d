<?xml version="1.0" encoding="UTF-8"?>

<shaderlist>

   <shadergroup name="LightingGroup">
   
      <shader name="TestDirectionalLight" default="yes">
         <source type="Vertex">shaders/lighting/TestPerPixelLighting.vert</source>
         <source type="Fragment">shaders/lighting/DirectionalLight.frag</source>
         <source type="Fragment">shaders/lighting/TestDirectionalLight.frag</source>
         <parameter name="diffuseTexture">
            <texture2D textureUnit="0">
               <source type="Auto"/>
            </texture2D>
         </parameter>
      </shader>
      
      <shader name="TestPointLight" default="yes">
         <source type="Vertex">shaders/lighting/TestPerPixelLighting.vert</source>
         <source type="Fragment">shaders/lighting/PointLight.frag</source>
         <source type="Fragment">shaders/lighting/TestPointLight.frag</source>
         <parameter name="diffuseTexture">
            <texture2D textureUnit="0">
               <source type="Auto"/>
            </texture2D>
         </parameter>
      </shader>
      
      <shader name="TestSpotLight" default="yes">
         <source type="Vertex">shaders/lighting/TestPerPixelLighting.vert</source>
         <source type="Fragment">shaders/lighting/SpotLight.frag</source>
         <source type="Fragment">shaders/lighting/TestSpotLight.frag</source>
         <parameter name="diffuseTexture">
            <texture2D textureUnit="0">
               <source type="Auto"/>
            </texture2D>
         </parameter>
      </shader>
	
   </shadergroup> 

</shaderlist>
