modules = [ 'dtABC', 'dtAudio', 'dtChar', 'dtCore', 'dtGUI', 'dtHLA', 'dtScript', 'dtUtil', 'dtVis', 'gui_fl', 'python', 'soarx' ]

if OS == 'windows' :

   if mode == 'debug' :
      build = 'Debug'
   else :
      build = 'Release'

   for module in modules :
