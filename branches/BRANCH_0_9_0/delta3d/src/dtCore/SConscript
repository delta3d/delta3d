dtCoreDeps=[ 'dtutil', 'glgui', 'isense', 'ode', 'OpenThreads', 'osg', 'osgDB', 'osgParticle', 'osgTerrain', 'osgText', 'osgUtil', 'osgGA', 'osgFX', 'osgProducer', 'sg', 'ul', 'js', 'Producer', 'tinyxml', 'opengl' ]

if OS == 'windows' :
   dtCoreSrcs.extend( [ 'deltawin_win32.cpp', 'uniqueid_win32.cpp' ] )
   dtCoreDeps += [ 'User32', 'Advapi32', 'Rpcrt4', 'Winmm', 'Gdi32' ]
elif OS == 'linux':
   dtCoreSrcs.extend( [ 'deltawin_x11.cpp', 'uniqueid_linux.cpp' ] )
   dtCoreDeps += [ 'uuid' ]
elif OS == 'darwin':
    dtCoreSrcs.extend(['deltawin_carbon.cpp', 'uniqueid_macosx.cpp'] )
    dtCoreDeps += [ 'CoreFoundation', 'IOKit', 'Carbon' ]
    
BuildLib( 'dtcore', dtCoreSrcs, dtCoreDeps, ['DT_LIBRARY'] )
