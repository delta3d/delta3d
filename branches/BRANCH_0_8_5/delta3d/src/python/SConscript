                'isectorbindings.cpp',
                'joystickbindings.cpp',
                'keyboardbindings.cpp',
                'lightbindings.cpp',
                'loadablebindings.cpp',
                'logicalinputdevicebindings.cpp',
                'motionmodelbindings.cpp',
                'mousebindings.cpp',
                'noisegeneratorbindings.cpp',
                'objectbindings.cpp',
                'orbitmotionmodelbindings.cpp',
                'particlesystembindings.cpp',
