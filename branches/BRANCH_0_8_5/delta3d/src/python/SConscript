pythonDtAbcSrcs = [ 'applicationbindings', 'baseabcbindings', 'dtabcbindings', 'weatherbindings', 'widgetbindings' ]

pythonDtAudioSrcs = [ 'audiomanagerbindings', 'dtaudiobindings', 'listenerbindings', 'soundeffectbinderbindings' ]

pythonDtCharSrcs = [ 'characterbindings', 'dtcharbindings' ]

pythonGui_flSrcs = [ 'dtguiflbindings' ]

