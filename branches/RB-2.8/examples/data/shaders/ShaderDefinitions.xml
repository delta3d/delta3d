<?xml version="1.0" encoding="UTF-8"?>

<shaderlist>

  <shadergroup name="TestShaders">

      <shader name="TestBumpMap" default="yes">
         <source type="Vertex">shaders/TestBumpMap.vert</source>
         <source type="Fragment">shaders/TestBumpMap.frag</source>
		 
         <parameter name="diffuseTexture">
            <texture2D textureUnit="0">
               <source type="Auto"/>
            </texture2D>
         </parameter>
	 
	     <parameter name="normalTexture">
            <texture2D textureUnit="1">
               <source type="Auto"/>
            </texture2D>
         </parameter>
		 
		 <parameter name="specTexture">
            <texture2D textureUnit="2">
               <source type="Auto"/>
            </texture2D>
         </parameter>
       
       <parameter name="mode">
   		<integer defaultValue="0"/>
   	 </parameter>

      </shader>

	  <shader name="AttributelessBump" default="no">
         <source type="Vertex">shaders/AttributelessBump.vert</source>	
         <source type="Fragment">shaders/AttributelessBump.frag</source>

         <parameter name="diffuseTexture">
            <texture2D textureUnit="0">
               <source type="Auto"/>
            </texture2D>
         </parameter>

         <parameter name="normalTexture">
            <texture2D textureUnit="1">
               <source type="Auto"/>
            </texture2D>
         </parameter>

         <parameter name="uViewPosition">
            <vec4 defaultValue="0 0 0 0" />
         </parameter>

		<parameter name="uViewDirection">
			<vec4 defaultValue="0 0 0 0" />
		 </parameter>

		<parameter name="mode">
			<integer defaultValue="0" />
		 </parameter>
	     
      </shader>
   </shadergroup>

  <shadergroup name="Terrains">
    <shader name="TerrainAltitude" default="yes">
      <source type="Vertex">shaders/TerrainAltitude.vert</source>
      <source type="Fragment">shaders/TerrainAltitude.frag</source>
      <parameter name="diffuseTexture">
        <texture2D textureUnit="0">
          <source type="Auto"/>
        </texture2D>
      </parameter>

      <parameter name="Altitudes">
        <vec4 defaultValue="50 300 500 700" />
      </parameter>
      <parameter name="TextureScales">
        <vec4 defaultValue="100 100 100 100" />
      </parameter>
      <parameter name="WaterColor">
        <vec4 defaultValue="0 0.35 0.5 0.75" />
      </parameter>
      <parameter name="AltitudeScale">
        <float defaultValue="1" />
      </parameter>
      <parameter name="DetailScale">
        <float defaultValue="1000" />
      </parameter>
      <parameter name="WaterSufaceOffset">
        <float defaultValue="25" />
      </parameter>
      <parameter name="WaterFadeDepth">
        <float defaultValue="25" />
      </parameter>
      <parameter name="SandTexture">
        <texture2D textureUnit="1">
          <source type="Image">textures/ShaderBase/TerrainAltitude_Sand.png</source>
          <wrap axis="S" mode="Repeat"/>
          <wrap axis="T" mode="Repeat"/>
        </texture2D>
      </parameter>
      <parameter name="GrassTexture">
        <texture2D textureUnit="2">
          <source type="Image">textures/ShaderBase/TerrainAltitude_Grass.png</source>
          <wrap axis="S" mode="Repeat"/>
          <wrap axis="T" mode="Repeat"/>
        </texture2D>
      </parameter>
      <parameter name="RockTexture">
        <texture2D textureUnit="3">
          <source type="Image">textures/ShaderBase/TerrainAltitude_Rock.png</source>
          <wrap axis="S" mode="Repeat"/>
          <wrap axis="T" mode="Repeat"/>
        </texture2D>
      </parameter>
      <parameter name="SnowTexture">
        <texture2D textureUnit="4">
          <source type="Image">textures/ShaderBase/TerrainAltitude_Snow.png</source>
          <wrap axis="S" mode="Repeat"/>
          <wrap axis="T" mode="Repeat"/>
        </texture2D>
      </parameter>
    </shader>
  </shadergroup>
    
</shaderlist>
